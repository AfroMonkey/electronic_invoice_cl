<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="electronic_invoice_form" model="ir.ui.view">
        <field name="name">account.electronic.invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="send_xml" string="Send XML" type="object" class="oe_highlight"/>
            </header>
            <field name="fiscal_position_id" position="before">
                <field name="sucursal"/>
            </field>
            <field name="partner_id" position="after">
                <field name="bussines_field_id"/>
            </field>
            <notebook position="inside">
                <page string="Transporte">
                    <group string="Vehiculo">
                        <field name="TransPatente"/>
                    </group>
                    <group string="Chofer">
                        <field name="TransRutChofer"/>
                        <field name="TransNombreChofer"/>
                    </group>
                    <group string="Destino">
                        <field name="TransDireccionDestino"/>
                        <field name="TransComunaDestino"/>
                        <field name="TransCiudadDestino"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
