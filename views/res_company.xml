<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_company_ei_form" model="ir.ui.view">
        <field name="name">res.company.ei.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <notebook  position="inside">
                <page string="Electronic Invoice" >
                    <group>
                        <field name="ei_url"/>
                        <field name="ei_user"/>
                        <field name="ei_password" password="True"/>
                        <field name="ei_id_user"/>
                        <field name="ei_id_company"/>
                        <field name="ei_environment"/>
                        <field name="ei_ringing"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
